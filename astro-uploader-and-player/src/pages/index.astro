---
import Layout from '../layouts/Layout.astro';
import { MuxUploader } from '@mux/mux-uploader-astro';
import mux from '../lib/mux';

const upload = await mux.video.uploads.create({
  new_asset_settings: {
    playback_policy: ['public'],
    encoding_tier: 'baseline',
  },
  cors_origin: '*',
});
---

<Layout title="Upload a video to Mux">
  <MuxUploader endpoint={upload.url} />

  <form method="POST">
    <input type="hidden" value={upload.id} name="uploadId" />
    <button type="submit" disabled>Watch video!</button>
  </form>
  <script>
    import { actions } from 'astro:actions';

    /* Enable the the form on mux-uploader successs */
    const muxUploader = document.querySelector('mux-uploader');
    if (muxUploader) {
      muxUploader.addEventListener('success', function () {
        const button = document.querySelector('button');
        if (button) button.disabled = false;
      });
    }

    /* attach form submit listener */
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', async function (event) {
        event.preventDefault();
        const formData = new FormData(form);
        const { data } = await actions.getAssetForUpload(formData);
        if (data?.assetId) {
          window.location.href = `/status/${data.assetId}`;
        } else {
          alert(data?.message ?? 'An error occurred');
        }
      });
    }
  </script>
</Layout>
